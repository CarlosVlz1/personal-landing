    icon: "linkedin",
    color: "#0077b5"
  },
  {
    name: "GitHub",
    url: "https://github.com/CarlosVlz1",
    icon: "github",
    color: "#333"
  },
  {
    name: "WhatsApp",
    url: "https://wa.me/573002126197",
    icon: "whatsapp",
    color: "#25d366"
  },
  {
    name: "Email",
    url: "mailto:cmvf4074@gmail.com",
    icon: "email",
    color: "#ea4335"
  }
