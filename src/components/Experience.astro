---
const experiences = [
  {
    title: "Desarrollador de Software",
    company: "Celerix SAS",
    period: "2023 - Presente",
    description:
      "Apoyando en el desarrollo de aplicaciones web escalables usando Java, Spring Boot, Oracle SQL, JavaScript, TypeScript, Docker, Git, GitHub.",
    technologies: [
      "Java",
      "Spring Boot",
      "Oracle SQL",
      "MongoDB",
      "JavaScript",
      "TypeScript",
      "NestJS",
      "Docker",
      "Git",
      "GitHub",
      "AWS",
    ],
  },
];
---

<section id="experiencia" class="experience">
  <div class="container">
    <h2 class="section-title">Experiencia</h2>
    <p class="section-subtitle">
      Mi trayectoria profesional en el desarrollo de software
    </p>

    <div class="timeline">
      {
        experiences.map((exp, index) => (
          <div class="timeline-item" data-index={index}>
            <div class="timeline-marker" />
            <div class="timeline-content">
              <div class="experience-card">
                <div class="experience-header">
                  <h3 class="experience-title">{exp.title}</h3>
                  <span class="experience-period">{exp.period}</span>
                </div>
                <h4 class="experience-company">{exp.company}</h4>
                <p class="experience-description">{exp.description}</p>
                <div class="experience-tech">
                  {exp.technologies.map((tech) => (
                    <span class="tech-tag">{tech}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience {
    padding: 5rem 1rem;
    background: var(--bg-dark);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    text-align: center;
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--gradient);
    border-radius: 2px;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-gray);
    font-size: 1.125rem;
    margin-bottom: 4rem;
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding-left: 2rem;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--gradient);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    animation: fadeInLeft 0.6s ease-out;
    animation-fill-mode: both;
  }

  .timeline-item:nth-child(1) {
    animation-delay: 0.1s;
  }
  .timeline-item:nth-child(2) {
    animation-delay: 0.2s;
  }
  .timeline-item:nth-child(3) {
    animation-delay: 0.3s;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--gradient);
    border: 3px solid var(--bg-dark);
    z-index: 2;
  }

  .timeline-content {
    margin-left: 2rem;
  }

  .experience-card {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid rgba(99, 102, 241, 0.1);
    transition: all 0.3s ease;
  }

  .experience-card:hover {
    border-color: rgba(99, 102, 241, 0.3);
    transform: translateX(5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .experience-title {
    font-size: 1.5rem;
    color: var(--text-light);
    font-weight: 700;
  }

  .experience-period {
    color: var(--accent);
    font-weight: 600;
    font-size: 0.875rem;
    padding: 0.25rem 0.75rem;
    background: rgba(20, 184, 166, 0.1);
    border-radius: 20px;
  }

  .experience-company {
    color: var(--primary);
    font-size: 1.125rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .experience-description {
    color: var(--text-gray);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .experience-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    padding: 0.375rem 0.75rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--primary);
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    .experience {
      padding: 3rem 1rem;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-marker {
      left: -1.5rem;
    }

    .timeline-content {
      margin-left: 1rem;
    }

    .experience-card {
      padding: 1.5rem;
    }

    .experience-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .experience-title {
      font-size: 1.25rem;
    }
  }
</style>
